@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<div class="row">
    <div class="col-md-12">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div>
                <br>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div>
                <br>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div>
                <br>
            </div>
            <div class="btn-group" role="group" aria-label="Basic radio toggle button group">

                <input type="radio" class="btn-check" id="btnRoleEtudiant" asp-for="Input.Type" value="Etudiant" autocomplete="off">
                <label class ="btn btn-outline-primary" for="btnRoleEtudiant">Étudiant</label><br/>

                <input type="radio" class="btn-check" id="btnRoleEntreprise" asp-for="Input.Type" value="Entreprise" autocomplete="off">
                <label class="btn btn-outline-primary" for="btnRoleEntreprise">Entreprise</label><br/>

                <input type="radio" class="btn-check" id="btnRoleEnseignant" asp-for="Input.Type" value="Enseignant" autocomplete="off">
                <label class="btn btn-outline-primary" for="btnRoleEnseignant">Enseignant</label>
            </div>
            <div>
                <span asp-validation-for="Input.Type" class="text-danger"></span>
                <br>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
